<script>
    
    const passwordInput = document.getElementById('contrasena');
    const requirements = {
        'req-length': (pwd) => pwd.length <= 8,
        'req-upper': (pwd) => /[A-Z]/.test(pwd),
        'req-lower': (pwd) => /[a-z]/.test(pwd),
        'req-number': (pwd) => /[0-9]/.test(pwd),
        'req-special': (pwd) => /[_\.\#]/.test(pwd),
        'req-forbidden': (pwd) => !/[\$\%\?\¡\-\'+\*\/,]/.test(pwd)
    };

    passwordInput.addEventListener('input', function() {
        const password = this.value;
        Object.keys(requirements).forEach(reqId => {
            const element = document.getElementById(reqId);
            const isValid = requirements[reqId](password);
            element.className = `requirement ${isValid ? 'valid' : 'invalid'}`;
            element.querySelector('i').className = `fas ${isValid ? 'fa-check' : 'fa-times'}`;
        });
    });

  
    document.getElementById('registrationForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const nombre = document.getElementById('nombre').value.trim();
        const correo = document.getElementById('correo').value.trim();
        const contrasena = document.getElementById('contrasena').value;

        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        
        if (!emailRegex.test(correo)) {
            alert("Por favor, ingresa un correo electrónico válido.");
            return;
        }

        const allValid = Object.values(requirements).every(fn => fn(contrasena));
        if (!allValid) {
            alert("La contraseña no cumple con todos los requisitos.");
            return;
        }

      
        document.getElementById('registro').style.display = 'none';
        document.getElementById('mainMenu').style.display = 'block';
        document.getElementById('userInfo').style.display = 'block';
        document.getElementById('userName').textContent = nombre;
    });

    function showCatalog(){
        alert("Aquí se mostrará el catálogo de productos.");
    }
    function showOffers(){
        alert("Aquí se mostrarán las ofertas.");
    }
    function showCart(){
        alert("Aquí podrás ver tus compras.");
    }
</script>
